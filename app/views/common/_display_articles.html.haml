=link_to article_path(article) do
  .card
    - if article.eye_catch.attached?
      .card_image
        = image_tag article.eye_catch
    .card_content
      .card_title
        = article.title
      .card_heart
        = image_tag 'heart.svg'
        %span 23
      .card_comments
        %p comments
        %span= article.comments.count
      .card_detail
        = image_tag 'default-avatar.png'
        %div
          %p= article.user.display_name
          %p= formatted_created_at(article)